{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Virtual Machine Name",
        "toolTip": "Enter Existing VM Name.",
        "osPlatform": "Windows",
        "constraints": {
          "required": true,
          "regex": "^[a-z][-a-z0-9]*$"
        }
      }

    ],
    "steps": [
      {
        "name": "Customer",
        "label": "Customer",
        "subLabel": {
          "preValidation": "Enter Customer Information",
          "postValidation": "Done"
        },
        "bladeTitle": "Customer",
        "elements": [
          {
            "name": "CustomerName",
            "type": "Microsoft.Common.TextBox",
            "label": "Customer Name",
            "toolTip": "Enter Customer Full Name. Ex. Vikram Pal Singh",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "CompanyName",
            "type": "Microsoft.Common.TextBox",
            "label": "Company Name",
            "toolTip": "Enter Company Full Name. Ex. Hanusoftware Solutions (P). Ltd.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "webSiteName",
            "type": "Microsoft.Common.TextBox",
            "label": "Enter Website URL",
            "toolTip": "Enter your website full URL that is accessible",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "EmailID",
            "type": "Microsoft.Common.TextBox",
            "label": "Email Address",
            "toolTip": "Enter Your Email Address.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "/^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$/",
              "validationMessage": "Enter Email In Proper Format."
            }
          },
          {
            "name": "ContactNo",
            "type": "Microsoft.Common.TextBox",
            "label": "Contact Number",
            "toolTip": "Enter Your Contact Number.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "Address",
            "type": "Microsoft.Common.TextBox",
            "label": "Address",
            "toolTip": "Enter Your Full Address.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "Country",
            "type": "Microsoft.Common.TextBox",
            "label": "Country",
            "toolTip": "Enter Your Country Name.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "State",
            "type": "Microsoft.Common.TextBox",
            "label": "State",
            "toolTip": "Enter Your State Name.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "City",
            "type": "Microsoft.Common.TextBox",
            "label": "City",
            "toolTip": "Enter Your City Name.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "Zipcode",
            "type": "Microsoft.Common.TextBox",
            "label": "Zipcode",
            "toolTip": "Enter Your Zipcode.",
            "defaultValue": "",
            "constraints": {
              "required": false,
              "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
              "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
            }
          },
          {
            "name": "Remark",
            "type": "Microsoft.Common.TextBox",
            "label": "Remarks",
            "toolTip": "Enter Remarks.",
            "defaultValue": "",
            "constraints": {
              "required": false 
            }
          }
        ]
      },
      {
        "name": "security",
        "label": "Security",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Security",
        "elements": [
          {
            "name": "jenkinsAdminPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Jenkins administrator password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": "Password for the 'admin' user on Jenkins for initial security setup.",
            "constraints": {
              "required": true
            }
          }
        ]
      },
      {
        "name": "deploymentDetails",
        "label": "Deployment Parameters",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Parameters",
        "elements": [
          {
            "name": "publicIP",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "CloudBees Jenkins Operations Center domain name"
            },
            "toolTip": {
              "domainNameLabel": "Your CloudBees Jenkins Operation Center instance will be available as http://{domain}.{location}.cloudapp.azure.com. Your CloudBees Jenkins Enterprise instances will be available as http://{domain}-{n}.{location}.cloudapp.azure.com."
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            },
            "defaultValue": {
              "publicIpAddress": "publicIP"
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": false,
              "hideExisting": true
            }
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage Account for the Virtual Machine's Disks",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS"
              ],
              "required": true
            },
            "options": {
              "hideExisting": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "storageAccountName": "[steps('deploymentDetails').storageAccount.name]",
      "storageAccountType": "[steps('deploymentDetails').storageAccount.type]",

      "publicIPNewOrExisting": "[steps('deploymentDetails').publicIP.newOrExistingOrNone]",
      "publicIPName": "[steps('deploymentDetails').publicIP.name]",
      "dnsNameForPublicIP": "[steps('deploymentDetails').publicIP.domainNameLabel]",

      "adminUsername": "[basics('adminUsername')]",
      "authenticationType": "[basics('adminCredentials').authenticationType]",
      "adminPassword": "[basics('adminCredentials').password]",
      "sshPublicKey": "[basics('adminCredentials').sshPublicKey]",

      "size": "[basics('size')]",
      "vmSize": "[steps('size').vmSize]",
      "jenkinsAdminPassword": "[steps('security').jenkinsAdminPassword]",

      "location": "[location()]"
    }
  }
}